@model List<ModelVersionConfig>

@{
    ViewData["Title"] = "Model Versions";
}

<div class="container-fluid mt-4">
    <h1>Model Versions</h1>
    
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Model Name</th>
                <th>Version</th>
                <th>Status</th>
                <th>Accuracy</th>
                <th>Precision</th>
                <th>Recall</th>
                <th>F1 Score</th>
                <th>Deployed</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ModelName</td>
                    <td>@item.VersionNumber</td>
                    <td>
                        <span class="badge bg-@(item.IsActive ? "success" : "secondary")">
                            @(item.IsActive ? "ACTIVE" : "INACTIVE")
                        </span>
                    </td>
                    <td>@(item.Accuracy?.ToString("P2") ?? "N/A")</td>
                    <td>@(item.Precision?.ToString("P2") ?? "N/A")</td>
                    <td>@(item.Recall?.ToString("P2") ?? "N/A")</td>
                    <td>@(item.F1Score?.ToString("P2") ?? "N/A")</td>
                    <td>@(item.DeployedAt?.ToString("yyyy-MM-dd") ?? "Not deployed")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
