@model List<ModelTrainingRuns>

@{
    ViewData["Title"] = "Training Runs";
}

<div class="container-fluid mt-4">
    <h1>Model Training Runs</h1>
    
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Run Date</th>
                <th>Model Version</th>
                <th>Status</th>
                <th>Data Size</th>
                <th>Metrics</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var run in Model)
            {
                <tr>
                    <td>@run.RunDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@run.ModelVersion</td>
                    <td>
                        <span class="badge bg-@(run.Status == "SUCCESS" ? "success" : run.Status == "FAILED" ? "danger" : "warning")">
                            @run.Status
                        </span>
                    </td>
                    <td>@run.DataSize</td>
                    <td>@run.Metrics</td>
                </tr>
            }
        </tbody>
    </table>
</div>
